@using SharedModels;

@model IEnumerable<UserTask>
@{
    ViewBag.Title = "MyTasks";
}

<h2>My Tasks</h2>
<table class="table table-bordered">
    <tr>
        <th>Task</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Status</th>
    </tr>
    @if (Model != null)
    {
        foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.Sataus</td>
            </tr>
        }
    }
</table>
